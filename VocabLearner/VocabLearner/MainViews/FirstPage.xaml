<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="VocabLearner.FirstPage"
 Title="First Page">
        <ContentPage.Content>


        <StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="Start" HorizontalOptions="CenterAndExpand">


                    <Label FontSize="26" Padding="0,10,0,0" Text="Welcome" x:Name="username"  FontAttributes="Bold" HorizontalOptions="Center"/>




                <ImageButton  Source="profilePic.png"
                       x:Name="profilePic"
                              Aspect="AspectFit"
                              HorizontalOptions="EndAndExpand"
                              Clicked="OnImageButtonClicked"/>



            </StackLayout>

        </StackLayout>


    </ContentPage.Content>
    </ContentPage>